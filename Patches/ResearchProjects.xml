<?xml version="1.0" encoding="utf-8" ?>
<!-- Re-Add MultibarrelWeapons so we can craft needed weapons -->
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>

    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <ResearchProjectDef>
              <defName>MultibarrelWeapons</defName>
              <label>multibarrel weapons</label>
              <description>Assemble miniguns.</description>
              <baseCost>2600</baseCost>
              <techLevel>Industrial</techLevel>
              <prerequisites>
                <li>GasOperation</li>
                <li>MicroelectronicsBasics</li>
              </prerequisites>
              <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
              <researchViewX>11.00</researchViewX>
              <researchViewY>4.60</researchViewY>
            </ResearchProjectDef>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>