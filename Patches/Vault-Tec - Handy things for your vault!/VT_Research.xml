<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vault-Tec - Handy things for your vault!</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- ========== VTTurret_MiniTurret ========== -->

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ResearchProjectDef[defName="VTsecurity"]/prerequisites/li[text()="HeavyTurrets"]</xpath>
                    <value>
                        <li>GunTurrets</li>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
