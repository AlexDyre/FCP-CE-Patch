<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vault-Tec - Handy things for your vault!</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- Apparel_VTsuit -->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_VTsuit"]/statBases</xpath>
                    <value>
                        <Bulk>1</Bulk>
                        <WornBulk>1</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_VTsuit"]/equippedStatOffsets</xpath>
                    <value>
                        <CarryBulk>5</CarryBulk>
                        <CarryWeight>5</CarryWeight>
                    </value>
                </li>


                <!-- Apparel_VTHelmet -->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_VTHelmet"]/statBases</xpath>
                    <value>
                        <Bulk>1</Bulk>
                        <WornBulk>1</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_VTHelmet"]/statBases</xpath>
                    <value>
                        <ArmorRating_Sharp>5</ArmorRating_Sharp>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_VTHelmet"]/statBases</xpath>
                    <value>
                        <ArmorRating_Blunt>4</ArmorRating_Blunt>
                    </value>
                </li>

                <!-- Apparel_VTJacket -->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_VTJacket"]/statBases</xpath>
                    <value>
                        <Bulk>1</Bulk>
                        <WornBulk>1</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_VTJacket"]/statBases/ArmorRating_Sharp</xpath>
                    <value>
                        <ArmorRating_Sharp>5</ArmorRating_Sharp>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_VTJacket"]/statBases/ArmorRating_Blunt</xpath>
                    <value>
                        <ArmorRating_Blunt>12</ArmorRating_Blunt>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_VTJacket"]/equippedStatOffsets</xpath>
                    <value>
                        <CarryBulk>10</CarryBulk>
                        <CarryWeight>5</CarryWeight>
                    </value>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>Defs/ThingDef[defName="Apparel_VTJacket"]/equippedStatOffsets/MoveSpeed</xpath>
                </li>


                <!-- PipBoy -->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="PipBoy"]/statBases</xpath>
                    <value>
                        <Bulk>1</Bulk>
                        <WornBulk>0</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="PipBoy"]/equippedStatOffsets</xpath>
                    <value>
                        <CarryWeight>5</CarryWeight>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
