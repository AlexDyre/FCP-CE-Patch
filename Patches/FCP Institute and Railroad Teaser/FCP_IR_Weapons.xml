<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>FCP Institute and Railroad Teaser</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- === Tools === -->
                <li Class="PatchOperationReplace">
                    <xpath>
						/Defs/ThingDef[
							defName = "Gun_Deliverer" or 
							defName = "Gun_DelivererUS" or 
							defName = "Gun_Institute_Laser_Pistol"
						]/tools
                    </xpath>
                    <value>
                        <tools>
                            <li Class="CombatExtended.ToolCE">
                                <label>grip</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>2</power>
                                <cooldownTime>1.54</cooldownTime>
                                <chanceFactor>1.5</chanceFactor>
                                <armorPenetrationBlunt>0.555</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Grip</linkedBodyPartsGroup>
                            </li>
                            <li Class="CombatExtended.ToolCE">
                                <label>muzzle</label>
                                <capacities>
                                    <li>Poke</li>
                                </capacities>
                                <power>2</power>
                                <cooldownTime>1.54</cooldownTime>
                                <armorPenetrationBlunt>0.555</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
                            </li>
                        </tools>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>
						/Defs/ThingDef[
							defName = "Gun_Institute_Laser_Rifle" or
							defName = "Gun_Railway_Rifle"
						]/tools
                    </xpath>
                    <value>
                        <tools>
                            <li Class="CombatExtended.ToolCE">
                                <label>stock</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>8</power>
                                <cooldownTime>1.55</cooldownTime>
                                <chanceFactor>1.5</chanceFactor>
                                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
                            </li>
                            <li Class="CombatExtended.ToolCE">
                                <label>barrel</label>
                                <capacities>
                                    <li>Blunt</li>
                                </capacities>
                                <power>5</power>
                                <cooldownTime>2.02</cooldownTime>
                                <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
                            </li>
                            <li Class="CombatExtended.ToolCE">
                                <label>muzzle</label>
                                <capacities>
                                    <li>Poke</li>
                                </capacities>
                                <power>8</power>
                                <cooldownTime>1.55</cooldownTime>
                                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                                <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
                            </li>
                        </tools>
                    </value>
                </li>

                <!-- Gun_Institute_Laser_Pistol  -->
                <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
                    <defName>Gun_Institute_Laser_Pistol</defName>
                    <statBases>
                        <WorkToMake>56000</WorkToMake>
                        <Mass>4.8</Mass>
                        <Bulk>2.70</Bulk>
                        <SwayFactor>1.17</SwayFactor>
                        <ShotSpread>0.12</ShotSpread>
                        <SightsEfficiency>0.85</SightsEfficiency>
                        <RangedWeapon_Cooldown>0.35</RangedWeapon_Cooldown>
                    </statBases>
                    <costList>
                        <Plasteel>25</Plasteel>
                        <ComponentSpacer>2</ComponentSpacer>
                    </costList>
                    <Properties>
                        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                        <hasStandardCommand>True</hasStandardCommand>
                        <defaultProjectile>Bullet_MFCell_Institute</defaultProjectile>
                        <warmupTime>0.3</warmupTime>
                        <range>15</range>
                        <soundCast>Shot_Institute_Laser</soundCast>
                        <soundCastTail>GunTail_Medium</soundCastTail>
                        <muzzleFlashScale>9</muzzleFlashScale>
                    </Properties>
                    <AmmoUser>
                        <magazineSize>8</magazineSize>
                        <reloadTime>1.7</reloadTime>
                        <ammoSet>AmmoSet_MFCell_Institute</ammoSet>
                    </AmmoUser>
                    <FireModes>
                        <aiAimMode>Snapshot</aiAimMode>
                    </FireModes>
                    <weaponTags>
                        <li>SimpleGun</li>
                        <li>CE_Sidearm</li>
                        <li>CE_OneHandedWeapon</li>
                    </weaponTags>
                </li>


                <!-- Gun_Institute_Laser_Rifle  -->



                <!-- Gun_Railway_Rifle  -->
                <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
                    <defName>Gun_Railway_Rifle</defName>
                    <statBases>
                        <WorkToMake>40000</WorkToMake>
                        <Mass>6.0</Mass>
                        <Bulk>12.50</Bulk>
                        <SwayFactor>1.3</SwayFactor>
                        <ShotSpread>0.07</ShotSpread>
                        <SightsEfficiency>0.9</SightsEfficiency>
                        <RangedWeapon_Cooldown>0.65</RangedWeapon_Cooldown>
                    </statBases>
                    <costList>
                        <Steel>50</Steel>
                        <Plasteel>20</Plasteel>
                        <ComponentIndustrial>5</ComponentIndustrial>
                    </costList>
                    <Properties>
                        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                        <hasStandardCommand>True</hasStandardCommand>
                        <defaultProjectile>Bullet_RailwaySpike_FMJ</defaultProjectile>
                        <warmupTime>0.9</warmupTime>
                        <range>48</range>
                        <soundCast>Shot_Railway_Rifle</soundCast>
                        <soundCastTail>GunTail_Medium</soundCastTail>
                        <muzzleFlashScale>9</muzzleFlashScale>
                    </Properties>
                    <AmmoUser>
                        <magazineSize>10</magazineSize>
                        <reloadTime>0.5</reloadTime>
                        <ammoSet>AmmoSet_RailwaySpike</ammoSet>
                        <reloadOneAtATime>true</reloadOneAtATime>
                    </AmmoUser>
                    <FireModes>
                        <aiAimMode>AimedShot</aiAimMode>
                    </FireModes>
                </li>

                <!-- Gun_Deliverer  -->
                <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
                    <defName>Gun_Deliverer</defName>
                    <statBases>
                        <WorkToMake>5500</WorkToMake>
                        <Mass>1.21</Mass>
                        <Bulk>0.75</Bulk>
                        <SwayFactor>1.07</SwayFactor>
                        <ShotSpread>0.15</ShotSpread>
                        <SightsEfficiency>0.80</SightsEfficiency>
                        <RangedWeapon_Cooldown>0.35</RangedWeapon_Cooldown>
                    </statBases>
                    <costList>
                        <Steel>30</Steel>
                        <ComponentIndustrial>2</ComponentIndustrial>
                    </costList>
                    <Properties>
                        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                        <hasStandardCommand>True</hasStandardCommand>
                        <defaultProjectile>Bullet_10mmAuto_FMJ</defaultProjectile>
                        <warmupTime>0.3</warmupTime>
                        <range>15</range>
                        <soundCast>Shot_Deliverer_Suppress</soundCast>
                        <soundCastTail>GunTail_Light</soundCastTail>
                        <muzzleFlashScale>9</muzzleFlashScale>
                    </Properties>
                    <AmmoUser>
                        <magazineSize>8</magazineSize>
                        <reloadTime>1.7</reloadTime>
                        <ammoSet>AmmoSet_10mmAuto</ammoSet>
                    </AmmoUser>
                    <FireModes>
                        <aiAimMode>Snapshot</aiAimMode>
                    </FireModes>
                    <weaponTags>
                        <li>SimpleGun</li>
                        <li>CE_Sidearm</li>
                        <li>CE_OneHandedWeapon</li>
                    </weaponTags>
                </li>


                <!-- Gun_DelivererUS  -->
                <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
                    <defName>Gun_DelivererUS</defName>
                    <statBases>
                        <WorkToMake>5500</WorkToMake>
                        <Mass>1.2</Mass>
                        <Bulk>0.70</Bulk>
                        <SwayFactor>1.07</SwayFactor>
                        <ShotSpread>0.15</ShotSpread>
                        <SightsEfficiency>0.80</SightsEfficiency>
                        <RangedWeapon_Cooldown>0.35</RangedWeapon_Cooldown>
                    </statBases>
                    <costList>
                        <Steel>30</Steel>
                        <ComponentIndustrial>2</ComponentIndustrial>
                    </costList>
                    <Properties>
                        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                        <hasStandardCommand>True</hasStandardCommand>
                        <defaultProjectile>Bullet_10mmAuto_FMJ</defaultProjectile>
                        <warmupTime>0.3</warmupTime>
                        <range>15</range>
                        <soundCast>Shot_Autopistol</soundCast>
                        <soundCastTail>GunTail_Light</soundCastTail>
                        <muzzleFlashScale>9</muzzleFlashScale>
                    </Properties>
                    <AmmoUser>
                        <magazineSize>8</magazineSize>
                        <reloadTime>1.7</reloadTime>
                        <ammoSet>AmmoSet_10mmAuto</ammoSet>
                    </AmmoUser>
                    <FireModes>
                        <aiAimMode>Snapshot</aiAimMode>
                    </FireModes>
                    <weaponTags>
                        <li>SimpleGun</li>
                        <li>CE_Sidearm</li>
                        <li>CE_OneHandedWeapon</li>
                    </weaponTags>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>