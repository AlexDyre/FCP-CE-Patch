<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>FCP Children of Atom Equipment Teaser</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/DamageDef[defName="FCP_ToxicBuildupGamma"]</xpath>
                    <value>
                        <soundExplosion>Gamma_Gun_Shot</soundExplosion>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Bullet_GammaRound_Base"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>Things/Projectile/Gamma_Blast</texPath>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>